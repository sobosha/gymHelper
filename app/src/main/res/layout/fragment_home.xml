<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".layer.ui.home.HomeFragment">

    <com.google.android.material.button.MaterialButton
        android:id="@+id/add_home"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/label_add_plan"
        app:layout_constraintBottom_toTopOf="@id/showPlans_home"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_chainStyle="packed" />

    <com.google.android.material.button.MaterialButton
        android:id="@+id/showPlans_home"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/label_show_plan"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@id/add_home"
        app:layout_constraintStart_toStartOf="@id/add_home"
        app:layout_constraintTop_toBottomOf="@id/add_home" />


</androidx.constraintlayout.widget.ConstraintLayout>